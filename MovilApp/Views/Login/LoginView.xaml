<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovilApp.Views.Login.LoginView"
             xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Login"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start" Padding="30">
            <Grid RowDefinitions="2*,2*,2*,*,*,*" ColumnDefinitions="*,*">
                <Label Grid.Row="0" Grid.Column="0" 
                       HorizontalTextAlignment="End"
                       VerticalTextAlignment="Center"
                       Margin="40,20">Email:</Label>
                <Entry Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Email}"
                       Margin="0,10,0,10"></Entry>

                <Label Grid.Row="1" Grid.Column="0" 
                       HorizontalTextAlignment="End"
                       VerticalTextAlignment="Center"
                       Margin="40,20">Contrase침a:</Label>
                <Entry Grid.Row="1" Grid.Column="1" 
                       Text="{Binding Password}"
                        IsPassword="True"
                       Margin="0,10,0,10"></Entry>
                <CheckBox IsChecked="{Binding RecordarContrase침a}"
                          Grid.Row="2" Grid.Column="0"
                          HorizontalOptions="End"
                          VerticalOptions="Center"
                          ></CheckBox>
                <Label Grid.Row="2" Grid.Column="1"
                       VerticalOptions="Center"
                       >Recordar contrase침a</Label>

                <Button Text="Iniciar sesi칩n"
                        x:Name="btnIniciarSesion"
                        Grid.Row="3" Grid.Column="0"
                        Command="{Binding IniciarSesionCommand}"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,10"
                        ></Button>

                <Button Text="Registrarse"
                        x:Name="btnRegistrarse"
                        Grid.Row="4" Grid.Column="0"
                        Command="{Binding RegistrarseCommand}"
                        Grid.ColumnSpan="2"></Button>
                <ImageButton 
                             Grid.Row="5" Grid.Column="0" 
                             Grid.ColumnSpan="2"
                             WidthRequest="400"
                             Margin="0,10,0,10"
                             x:Name="btnLoginGoogle"
                            
                             ></ImageButton>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>